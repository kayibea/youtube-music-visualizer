{
  "$schema": "https://json.schemastore.org/chrome-manifest.json",
  "manifest_version": 3,
  "name": "Youtube Music Visualizer",
  "short_name": "YTMV",
  "description": "Visualize currently playing audio.",
  "version": "0.0.1",
  "content_scripts": [
    {
      "css": ["content.css"],
      "run_at": "document_idle",
      "matches": ["https://music.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [],
  "host_permissions": ["https://music.youtube.com/*"]
}
